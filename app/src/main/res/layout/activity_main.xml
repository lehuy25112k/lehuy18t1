<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:background="#2386DD"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="-20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="120dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView

                tools:ignore="ContentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dolehuy"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đỗ Lê Huy"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="-15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="You Never Walk Alone"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_waves" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="password"
            android:maxLines="15"
            android:inputType="textPassword"
            android:layout_marginBottom="5dp"
            android:textColor="#2386DD"
            android:textSize="15dp"
            android:textStyle="normal"/>

        <EditText
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="password"
            android:maxLines="15"
            android:textColor="#1DE9B6"
            android:inputType="textPassword"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:textStyle="normal"/>


        <Button
            android:id="@+id/bt1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textStyle="normal"
            android:background="@drawable/botronbutton1"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:layout_marginBottom="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Already a member"
            android:textSize="17dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/sigin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sign In"
            android:textColor="#2386DD"
            android:textSize="17dp"
            android:gravity="center"/>

    </LinearLayout>




</LinearLayout>